{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@layouts/*": ["./layouts"],
      "@layouts": ["./layouts/index.ts"],
      "@components/*": ["./common/components"],
      "@components": ["./common/components/index.ts"],
      "@enums/*": ["./enums"],
      "@enums": ["./enums/index.ts"],
      "@models/*": ["./models"],
      "@models": ["./models/index.ts"],
      "@utils/*": ["./common/utils"],
      "@utils": ["./common/utils/index.ts"],
      "@hooks/*": ["./hooks"],
      "@hooks": ["./hooks/index.ts"],
      "@services/*": ["./services"],
      "@services": ["./services/index.ts"],
      "@shared-props/*": ["./common/props"],
      "@shared-props": ["./common/props/index.ts"],
      "@contexts/*": ["./contexts"],
      "@contexts": ["./contexts/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
